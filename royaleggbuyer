task.spawn(function()
    -- Renames obfuscated remotes to be more readable
    local function rename(remotename, hashedremote)
        hashedremote.Name = remotename
    end

    table.foreach(getupvalue(require(game:GetService("ReplicatedStorage"):WaitForChild("Fsys")).load("RouterClient").init, 4), rename)
end)
local function buy_royal_eggs()
    for i = 1, tonumber(getgenv().buy_count) do
        -- Replace with your provided code to buy royal eggs
        local args = {
            [1] = "pets",        -- Category: pets
            [2] = "royal_egg",   -- Item ID: royal_egg
            [3] = {
                ["buy_count"] = 1 -- Buy one item at a time
            }
        }

        -- Call the server to buy the royal egg
        game:GetService("ReplicatedStorage").API.euBDQgaSVOTfQCL:InvokeServer(unpack(args))
        
        -- Wait between each purchase
        task.wait(0.2) -- Adjust this delay if necessary
    end
end
